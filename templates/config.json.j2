{
    "advertise_addr" : "{{ private_network.address }}",
    "client_addr": "0.0.0.0",
    "data_dir": "/consul/data",
    "datacenter": "{{ consul_datacenter }}",
    "node_name": "{{ consul_node }}",
{% if consul_server %}
{% set current_host = [ansible_hostname] %}
    "bootstrap_expect": {{ consul_servers|length }},
{% if consul_servers|difference(current_host)|length > 0 %}
    "retry_join": [{% for host in consul_servers|difference(current_host) %}"{{ hostvars[host]['private_network']['address'] }}"{% if not loop.last %}, {% endif %}{% endfor %}],
{% endif %}
    "server": true,
    "ui": true,
{% else %}
    "retry_join": [{% for host in consul_servers %}"{{ hostvars[host]['private_network']['address'] }}"{% if not loop.last %}, {% endif %}{% endfor %}],
{% endif %}
    "leave_on_terminate": true,
    "skip_leave_on_interrupt": true,
    "disable_update_check": true,
{% if consul_encrypt %}
    "encrypt": "{{ consul_encrypt }}",
{% endif %}
    "log_level": "warn"
}
